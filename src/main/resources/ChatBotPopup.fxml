<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-border-color: #007bff; -fx-border-width: 2px;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ChatBot">
    <VBox alignment="CENTER" layoutX="29.0" layoutY="27.0" prefHeight="345.0" prefWidth="541.0" spacing="10.0" style="-fx-background-color: #f0f0f0;">
        <TextArea fx:id="chatArea" editable="false" prefHeight="300.0" prefWidth="600.0" style="-fx-background-color: white; -fx-font-family: 'Arial'; -fx-font-size: 14px; -fx-padding: 10px;" wrapText="true" />
        <HBox alignment="CENTER" prefWidth="500.0" spacing="10.0">
            <ComboBox fx:id="questionComboBox" prefHeight="26.0" prefWidth="200.0" promptText="Select a question...">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Quels sont les documents nécessaires pour louer un logement ?" />
                        <String fx:value="Quel est le mode de paiement accepté pour la location ?" />
                        <String fx:value="Est-ce que les animaux de compagnie sont autorisés dans le logement ?" />
                        <String fx:value="Y a-t-il des places de parking disponibles avec le logement ?" />
                        <String fx:value="Quels sont les équipements inclus dans le logement ?" />
                    </FXCollections>
                </items>
                <style>
                    -fx-font-family: 'Arial';
                    -fx-font-size: 14px;
                </style>
            </ComboBox>
            <TextField fx:id="userInputField" prefHeight="26.0" prefWidth="300.0" promptText="Type your message here..." style="-fx-font-family: 'Arial'; -fx-font-size: 14px;" />
            <Button fx:id="sendButton" onAction="#sendMessage" style="-fx-font-family: 'Arial'; -fx-font-size: 14px;" text="Send" />
            <Button onAction="#onClose" prefHeight="26.0" prefWidth="60.0" style="-fx-background-color: #d91b1b; -fx-font-family: 'Arial'; -fx-font-size: 14px;" textFill="#f2ebeb" />
        </HBox>
    </VBox>
</AnchorPane>
