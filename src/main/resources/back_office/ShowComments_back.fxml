<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.AddComment">
   <VBox layoutX="20.0" layoutY="20.0" spacing="10.0" styleClass="main-container">
      <Label style="-fx-font-weight: bold; -fx-font-size: 14pt;" text="Comments" />
      <ListView fx:id="commentListView" onEditStart="#onItemSelected" prefHeight="200.0" styleClass="comment-list" />
      <Label style="-fx-font-weight: bold; -fx-font-size: 14pt;" text="Add Comment" />
      <TextArea fx:id="commentTextArea" prefHeight="100.0" styleClass="comment-text-area" />
      <Button onAction="#addComment" styleClass="add-comment-button" text="Add Comment" />
   </VBox>
</AnchorPane>
